        annualBtn.classList.remove('bg-white', 'text-navy-700', 'shadow-sm');
        annualBtn.classList.add('text-gray-600');
      }
    } else {
      if (annualBtn) {
        annualBtn.classList.add('bg-white', 'text-navy-700', 'shadow-sm');
        annualBtn.classList.remove('text-gray-600');
      }
      if (monthlyBtn) {
        monthlyBtn.classList.remove('bg-white', 'text-navy-700', 'shadow-sm');
        monthlyBtn.classList.add('text-gray-600');
